#:kivy 1.7.1

#: import BoxLayout kivy.uix.boxlayout.BoxLayout
#: import ListAdapter kivy.adapters.listadapter.ListAdapter
#: import SimpleListAdapter kivy.adapters.simplelistadapter.SimpleListAdapter
#: import ListItemButton kivy.uix.listview.ListItemButton
#: import Label kivy.uix.label.Label
#: import Image kivy.uix.image.Image
#: import AsyncImage kivy.uix.image.AsyncImage


<ListItemButton>:
    on_press: app.root.file_on_select(*args)

<ShowEnc>:
    padding: root.width * 0.01, root.width * 0.01
    width: self.width
    cols: 1
    font_size: str(font_slider.value)+'sp'
    main_text: main_text
    
    BoxLayout:
        id: topup
        orientation: 'horizontal'
        size_hint: 1, None
        width: self.width
        
        Label:
            text: '... main menu' 
            size_hint: .2, None
            font_size: str(font_slider.value)+'sp'
            
        TextInput:
            id: main_text
            size_hint: .3, .5
            text: 'Type to search..!'
            font_size: str(font_slider.value)+'sp'
        
        Label:
            text: 'location is '+root.actual_location
            size_hint: .5, None
            text_size: self.width, None
            height: self.texture_size[1]
            font_size: str(font_slider.value)+'sp'
            
        Button:
            text: 'Other function'
            size_hint: .5, None
            on_press: root.clear()
            font_size: str(font_slider.value)+'sp'
            
        Button:
            text: 'One dir up'
            size_hint: .5, None
            on_press: root.multimedia_content()
            font_size: str(font_slider.value)+'sp'
            
    BoxLayout:
        id: middle
        orientation: 'horizontal'
        width: self.width
        
        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, 1
            canvas:
                Rectangle:
                    pos: self.pos
                    size: self.size
            Image:
                source: 'tim.jpg'
            
        ListView:
            id: file_list
            size_hint_x: .35
            font_size: str(font_slider.value)+'sp'
            adapter:
                ListAdapter(data=root.file_lib, cls=ListItemButton, sorted_keys=[])
                
                
        ListView:
            id: dir_list
            size_hint_x: .35
            font_size: str(font_slider.value)+'sp'
            adapter:
                ListAdapter(data=root.fldr_lib, cls=ListItemButton)
        
    BoxLayout:
        id: bottom
        orientation: 'horizontal'
        size_hint: 1, None
        width: self.width
        height: root.height / 10
        
        Label:
            text: '... main'
            font_size: str(font_slider.value)+'sp'
            
        Slider:
            id: font_slider
            orientation: 'horizontal'
            min: 1
            max: 100
            value: 10
            size_hint: 1, None
            height: 10
